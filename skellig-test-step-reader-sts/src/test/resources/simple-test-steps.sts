name ('Simple test step'){
 url = '${baseUrl}/a/b/c'
 method = POST
 payload {
      type = json
      json {
             command = "go"
            value = "v 1 2 3"
             v2 = #[${a : #[${b}.length]}.size]
             v3 = ${a : ${b}.'a.b' }
      }
 }
}

name(' Send \d{1} message (.*) from csv \(test\)') {
 url = /'a/'b/'c'
 method = POST
 auth {
    username = ${user}
    password = ${password}\_
 }
 body {
    template {
        file = '//resources/\"templates\"/msg_get(id).ftl'
        csv
        {
          file = '/resources/data/test1.csv'
          row {
              name = '\\\ttest da\'ta wi\'th \'valid\' values'
              group = 1
          }
          convert = TABLE
        }
    }}
 }